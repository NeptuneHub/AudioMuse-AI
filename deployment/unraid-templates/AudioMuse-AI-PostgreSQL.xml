<?xml version="1.0"?>
<Container version="2">
  <Name>AudioMuse-AI-PostgreSQL</Name>
  <Repository>postgres:16-alpine</Repository>
  <Registry>https://hub.docker.com/_/postgres</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>bash</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/NeptuneHub/AudioMuse-AI/discussions</Support>
  <Project>https://github.com/NeptuneHub/AudioMuse-AI</Project>
  <Overview>PostgreSQL database dedicated to AudioMuse-AI. Stores analyzed track data, embeddings, playlists, and clustering results.&#xD;
&#xD;
This container is required for AudioMuse-AI to function properly.&#xD;
&#xD;
Install this container BEFORE installing AudioMuse-AI.</Overview>
  <Category>Tools: MediaApp:Music</Category>
  <WebUI/>
  <TemplateURL/>
  <Icon>https://raw.githubusercontent.com/docker-library/docs/01c12653951b2fe592c1f93a13b4e289ada0e3a1/postgres/logo.png</Icon>
  <ExtraParams>--restart=unless-stopped</ExtraParams>
  <PostArgs/>
  <CPUset/>
  <DateInstalled/>
  <DonateText/>
  <DonateLink/>
  <Requires>Part of AudioMuse-AI stack</Requires>
  <Config Name="PostgreSQL Port" Target="5432" Default="5435" Mode="tcp" Description="PostgreSQL port (5435 to avoid conflict with other PostgreSQL instances)" Type="Port" Display="always" Required="true" Mask="false">5435</Config>
  <Config Name="PostgreSQL User" Target="POSTGRES_USER" Default="audiomuse" Mode="" Description="PostgreSQL username (must match AudioMuse-AI config)" Type="Variable" Display="always" Required="true" Mask="false">audiomuse</Config>
  <Config Name="PostgreSQL Password" Target="POSTGRES_PASSWORD" Default="" Mode="" Description="PostgreSQL password (must match AudioMuse-AI config)" Type="Variable" Display="always" Required="true" Mask="true"/>
  <Config Name="PostgreSQL Database" Target="POSTGRES_DB" Default="audiomuse" Mode="" Description="PostgreSQL database name (must match AudioMuse-AI config)" Type="Variable" Display="always" Required="true" Mask="false">audiomuse</Config>
  <Config Name="PostgreSQL Data" Target="/var/lib/postgresql/data" Default="/mnt/user/appdata/audiomuse-ai/postgres" Mode="rw" Description="PostgreSQL data directory" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/audiomuse-ai/postgres</Config>
  <Config Name="PGDATA" Target="PGDATA" Default="/var/lib/postgresql/data/pgdata" Mode="" Description="PostgreSQL data subdirectory" Type="Variable" Display="advanced" Required="false" Mask="false">/var/lib/postgresql/data/pgdata</Config>
</Container>